{
  "version": 2,
  "builds": [
    {
      "src": "backend/config.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb", "runtime": "python3.9" }
    },
    {
      "src": "build_files.sh",
      "use": "@vercel/static-build",
      "config": { "distDir": "statfiles_build" }
    }
  ],
  "routes": [
    {
      "src": "/frontend/dist/(.*)",
      "dest": "/frontend/dist/$1"
    },
    {
      "src": "/(.*)",
      "dest": "backend/config.py"
    }
  ]
}
